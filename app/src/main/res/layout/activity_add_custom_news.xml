<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_custom_news"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.byt_eye.tcadmin.AddCustomNews">

    <EditText
        android:id="@+id/custom_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:inputType="textPersonName"
        android:lines="2"
        android:hint="TITLE" />

    <EditText
        android:id="@+id/custom_img_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/custom_title"
        android:layout_margin="10dp"
        android:inputType="textPersonName"
        android:lines="2"
        android:hint="IMG URL" />


    <Button
        android:id="@+id/send_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Send" />

    <EditText
        android:id="@+id/custom_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/custom_img_url"
        android:layout_margin="10dp"
        android:inputType="textPersonName"
        android:lines="2"
        android:hint="POST URL" />

</RelativeLayout>
